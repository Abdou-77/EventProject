# Environment Variables Example
# Copy this file to .env and update with your values for production

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=eventdb
MYSQL_USER=eventuser
MYSQL_PASSWORD=eventpass

# Backend Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=eventdb
DB_USER=root
DB_PASSWORD=rootpassword
SERVER_PORT=8080

# Spring Profile (docker, dev, prod)
SPRING_PROFILES_ACTIVE=docker

# Port Mappings (change if ports are already in use)
BACKEND_PORT=8081
FRONTEND_PORT=8000
